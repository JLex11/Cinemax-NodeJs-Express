<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/_head.ejs') %>
</head>
<body>
    <%- include('./partials/_header.ejs') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card-body">
                    <form action="/Estadisticas/update/<%= data.id_estadisticas %>" method="post">
                        <div class="form-group mt-2">
                            <input type="number"  readonly name="id_estadisticas" value="<%= data.id_estadisticas %>" class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="number" name="cant_vistas" value="<%= data.cant_vistas %>"  class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="number" name="cant_likes" value="<%= data.cant_likes %>"  class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="number" name="cant_comentarios" value="<%= data.cant_comentarios %>"  class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="text" name="estado" value="T" class="form-control">
                        </div>
                        <input type="submit" value="Update estadisticas" class="btn btn-outline-primary mt-3">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/_footer.ejs') %>
</body>
</html>