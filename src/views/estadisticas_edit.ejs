<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/_head.ejs') %>
</head>
<body>
    <%- include('./partials/_header.ejs') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card-body">
                    <form action="/Estadisticas/update/<%= data.idestadisticas %>" method="post">
                        <div class="form-group mt-2">
                            <input type="number"  readonly name="idestadisticas" value="<%= data.idestadisticas %>" class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="number" name="cantvistas" value="<%= data.cantvistas %>"  class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="number" name="cantlikes" value="<%= data.cantlikes %>"  class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="number" name="cantcomentarios" value="<%= data.cantcomentarios %>"  class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="text" name="estado" value="T" class="form-control">
                        </div>
                        <input type="submit" value="Update estadisticas" class="btn btn-outline-primary mt-3">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/_footer.ejs') %>
</body>
</html>