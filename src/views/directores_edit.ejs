<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/_head.ejs') %>
</head>
<body>
    <%- include('./partials/_header.ejs') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card-body">
                    <form action="/Directores/update/<%= data.iddirector %>" method="post" enctype="multipart/form-data">
                        <div class="form-group mt-2">
                            <input type="text" readonly name="ididrector" value="<%= data.iddirector %> " class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="text" name="nombre" value="<%= data.nombre %> " class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="date" name="fechanacimiento" class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="text" name="descripcion" value="<%= data.descripcion %> " class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="file" name="foto" class="form-control">
                        </div>

                        <input type="hidden" name="estado" value="T">
                        <input type="submit" value="Add director" class="btn btn-outline-primary mt-3">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/_footer.ejs') %>
</body>
</html>